</div>

<script>

    const busquedaNO = document.getElementById("busquedaNO")
    const busquedaCO = document.getElementById("busquedaCO")

    let IdOrdenServicio="{{id}}"
    let array = []
    let arrayr = []
    {{#each ser }}
    array.push({
        id: "{{IdServicio}}",
        nombre: "{{Descripcion}}"
    })
    {{/each}}
    {{#each ref }}
    arrayr.push({
        id: "{{IdRefaccion}}",
        nombre: "{{Descripcion}}"
    })
    {{/each}}
    for(let index=0;index<array.length;index++){
        let doc = document.getElementById("as"+array[index].id)
        doc.href="/servistar/addgarantia"+IdOrdenServicio+"/ser"+array[index].id+"/"
    }
    for(let index=0;index<arrayr.length;index++){
        let doc = document.getElementById("ar"+arrayr[index].id)
        doc.href="/servistar/addgarantia"+IdOrdenServicio+"/ref"+arrayr[index].id+"/"
    }

            function buscarNO() {
                busquedaCO.value=""
               document.getElementById("tblmas2").style.display="none"
               document.getElementById("tblmas1").style.display="block"
                const texto = busquedaNO.value.toLowerCase()
                if (texto == "") {
                    document.getElementById("tblh1").style.display = "none"
                    for (index = 0; index < array.length; index++) {
                        document.getElementById("s"+array[index].id).style.display = "none"
                    }
                    return
                }
                for (index = 0; index < array.length; index++) {
                    let nombre = array[index].nombre.toLowerCase()
                    if (nombre.indexOf(texto) !== -1) {
                        document.getElementById("s"+array[index].id).style.display = "block"
                        document.getElementById("tblh1").style.display = "block"
                    } else {
                        document.getElementById("s"+array[index].id).style.display = "none"
                    }
                }

            }
            function buscarCO() {
                busquedaNO.value=""
               document.getElementById("tblmas1").style.display="none"
               document.getElementById("tblmas2").style.display="block"
                const texto = busquedaCO.value.toLowerCase()
                if (texto == "") {
                    document.getElementById("tblh2").style.display = "none"
                    for (index = 0; index < arrayr.length; index++) {
                        document.getElementById("r"+arrayr[index].id).style.display = "none"
                    }
                    return
                }
                for (index = 0; index < arrayr.length; index++) {
                    let nombre = arrayr[index].nombre.toLowerCase()
                    if (nombre.indexOf(texto) !== -1) {
                        document.getElementById("r"+arrayr[index].id).style.display = "block"
                        document.getElementById("tblh2").style.display = "block"
                    } else {
                        document.getElementById("r"+arrayr[index].id).style.display = "none"
                    }
                }

            }

            busquedaNO.addEventListener("keyup", buscarNO)
            busquedaNO.addEventListener("keydown", buscarNO)
            busquedaCO.addEventListener("keyup", buscarCO)
            busquedaCO.addEventListener("keydown", buscarCO)



</script>