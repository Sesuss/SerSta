<div class="container p-4">
    <div class="row">
        <div class=" mx-auto">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-dark mb-3 h4">GARANTIA  {{id}}</h1>
                    <div class=" mx-auto">
                        <div class="card">
                            <div class="card-body" style="background-color:#d9d9d9;">
                                <h1 class="text-dark mb-3 h4">Buscar</h1>
                                <div class="form-group">
                                       <div class="input-group">
                                        <input  id="busquedaNO" type="text"
                                            class="form-control" placeholder="Servicio">
                                        <span class="input-group-addon"></span>
                                        <input  id="busquedaCO" type="text" 
                                            class="form-control" placeholder="Refacciones">
                                            </div>
                                        </div>
                                <div class="form-group px-2">
                                    <table class="table table-bordered table-hover" id="tblmas1">
                                        <thead id="tblh1" style="display:none">
                                            <tr role="row">
                                                <th>Servicio</th>
                                                <th>Horas de trabajo</th>
                                                <th>Costo de servcio</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tblbody">
                                            {{#each ser}}
                                            <tr id="s{{IdServicio}}" style="display:none">
                                                <td><a id="as{{IdServicio}}" href=""
                                                        class="link-primary">{{Descripcion}}</a> </td>
                                                <td>{{Horas}}</td>
                                                <td>{{CostoServicio}}</td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                               <div class="form-group px-2">
                                    <table class="table table-bordered table-hover" id="tblmas2">
                                        <thead id="tblh2" style="display:none">
                                            <tr role="row">
                                                <th>Refaccion</th>
                                                <th>Existencias</th>
                                                <th>Costo de venta</th>
                                                <th>Costo de compra</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tblbody">
                                            {{#each ref}}
                                            <tr id="r{{IdRefaccion}}" style="display:none">
                                                <td><a id="ar{{IdRefaccion}}" href=""
                                                        class="link-primary">{{Descripcion}}</a> </td>
                                                <td>{{Existencias}}</td>
                                                <td>{{CostoVenta}}</td>
                                                <td>{{CostoCompra}}</td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                                <div class="form-group pu-5">
                                    <button style="display:none" id="lib" class="btn btn-success">
                                        <a href="" id="link" class="btn btn-success"></a></button>
                                </div>
                            </div>
                        </div>
                        <br>
                        {{#if serv}}
                         <table class="table table-bordered table-hover ">
                                    <thead >
                                         <tr style="background-color: #5b5378; color: white;">
                                            <th>Reparacion</th>
                                            <th>Horas de trabajo</th>
                                            <th>Costo de venta</th>
                                            <th>Id del servicio</th>
                                            <th>Opciones</th>
                                        </tr>
                                    </thead>
                                    <tbody >
                                        {{#each serv}}
                                        <tr class="table-active"> 
                                            <th style="font-weight:normal">{{Descripcion}}</th>
                                            <th style="font-weight:normal">{{Horas}}</th>
                                            <th style="font-weight:normal">{{CostoServicio}}</th>
                                            <th style="font-weight:normal">{{IdOrdenServicio}}</th>
                                            <th style="font-weight:normal"><a href="/eliminar_garantia{{IdReferencia}}/" class="btn btn-info"><i style="color: white;" class="fas fa-times"></i></a></th>
                                        </tr>
                                        {{/each}}
                                        
                                    </tbody>
                                </table>
                           {{/if}}
                         {{#if refac}}
                         <table class="table table-bordered table-hover ">
                                    <thead >
                                         <tr style="background-color: #5b5378; color: white;">
                                            <th>Refacciones</th>
                                            <th>Costo de venta</th>
                                            <th>Id del servicio</th>
                                            <th>Opciones</th>
                                        </tr>
                                    </thead>
                                    <tbody >
                                        {{#each refac}}
                                        <tr class="table-active"> 
                                            <th style="font-weight:normal">{{Descripcion}}</th>
                                            <th style="font-weight:normal">{{CostoVenta}}</th><i ></i>
                                            <th style="font-weight:normal">{{IdOrdenServicio}}</th>
                                            <th style="font-weight:normal"><a href="/eliminar_garantia{{IdReferencia}}/" class="btn btn-info"><i style="color: white;" class="fas fa-times"></i></a></th>
                                        </tr>
                                        {{/each}}
                                        
                                    </tbody>
                                </table>
                           {{/if}}
                    </div>
                </div>
            </div>
